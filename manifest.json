{
  "manifest_version": 3,
  "name": "Job Tracker (v1)",
  "version": "1.0.0",
  "description": "Minimal, reliable job tracker. Click icon to open side panel, save job, view in dashboard.",
  "permissions": [
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.indeed.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "Job Tracker"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content/linkedin.js"
      ],
      "run_at": "document_idle"
    }
  ]
}